@page
@model Nuages.Identity.UI.Pages.Account.Manage.EmailModel
@inject IOptions<Nuages.Web.Recaptcha.GoogleRecaptchaOptions> RecaptchaOptions

@{
    ViewData["Title"] = Localizer["changeEmail:title"];
}

<div id="app" >
<h2 class="page-header">@Localizer["changeEmail.title"]</h2>
    <div class="flex justify-center">
        <i class="fas fa-spinner fa-spin fa-3x" v-if="status == 'sending'" v-show="status == 'sending'" style="display: none"></i>
        <div class="flex flex-col " v-if="status == 'done'" v-show="status == 'done'" style="display: none">
            <i class="fa fa-check-circle text-green-700 fa-3x text-center"></i>
            <span class="mt-4">@Localizer["changeEmail:seeEmail"]</span>
        </div>
    </div>

    
    <form class="space-y-4" method="POST" v-on:submit.prevent="changeEmail" id="formChangeEmail" v-if="status == ''">
        <span class="text-gray-500">@Localizer["changeEmail:instructions"]</span>
        <div>
            <strong>@Localizer["changeEmail:currentEmail"]</strong>&nbsp;
            <span>@Model.Email</span>
        </div>
                
        <partial name="Shared/ErrorList"/>
       
        <input id="email" name="email" type="email" autofocus="" v-model="email" placeholder="@Localizer["changeEmail:newEmail"]" required class="text-box">
        <button v-on:click.prevent="changeEmail" class="primary full">
            @Localizer["changeEmail:submit"]
        </button>
    </form>

</div>


@section Scripts
{
    <script>
        var emailRequiredMessage = "@string.Format(Localizer["errorMessage:required"]!, Localizer["email"])";
        var emailInvalidMessage = "@Localizer["errorMessage:invalidEmail"]";
        var recaptcha = '@RecaptchaOptions.Value.SiteKey';
        
    </script>
    <script src="/js/pages/manage/email.js"></script>
}