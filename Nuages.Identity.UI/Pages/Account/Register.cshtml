@page
@model RegisterModel
@{
    ViewBag.Title = "Register";
    ViewBag.ShowRegistration = false;
}

<div class="min-h-screen bg-gray-100 flex flex-col justify-start py-12 sm:px-6 lg:px-8 " id="app" >

    <partial name="Shared/LogoHeader"/>
      
      <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
           <div >
                  <form id="registerForm"  method="post">
                      <h2>Create a new account.</h2>
                      <hr />
                     
                      <div >
                          <input asp-for="Input.Email"autocomplete="username" />
                       
                      </div>
                      <div >
                          <input asp-for="Input.Password"  autocomplete="new-password" />
                          
                      </div>
                      <div >
                          <input asp-for="Input.ConfirmPassword"  />
                          
                      </div>
                      <button id="registerSubmit" type="submit">Register</button>
                  </form>
              </div>
      </div>
</div>
</div>
   
