@page
@model Nuages.Identity.UI.Pages.Account.LoginWithSMS
@inject IOptions<Nuages.Web.Recaptcha.GoogleRecaptchaOptions> RecaptchaOptions

@{
    ViewData["Title"] = Localizer["loginWithSMS:title"];
}


<div class="flex justify-center mt-6">
    <i class="fas fa-spinner fa-spin fa-3x" v-if="status == 'sending'" v-show="status == 'sending'" style="display: none"></i>
    <div class="flex flex-col " v-if="status == 'done'" v-show="status == 'done'" style="display: none">
        <i class="fa fa-check-circle text-green-700 fa-3x text-center"></i>
        <span class="mt-4">@Localizer["loginWithSMS:seeSMS"]</span>
    </div>
</div>

<form class="space-y-4 mt-4" method="POST" v-on:submit.prevent="loginSMS" id="formLoginSMS" v-if="status == ''">
    <span>@Localizer["loginWithSMS:instructions"]</span>
    <partial name="Shared/ErrorList"/>
    <button v-on:click.prevent="loginSMS" class="btn btn-primary">
        @Localizer["loginWithSMS:send"]
    </button>
</form>

@section Scripts
{
    <script>
        var recaptcha = '@RecaptchaOptions.Value.SiteKey';
         var returnUrl = '@Html.Raw(Model.ReturnUrl)';
    </script>
    <script src="/js/pages/sendSMSCode.js"></script>
}

@section MainFooter
{
    <partial name="Shared/BackToLogin"/>
}