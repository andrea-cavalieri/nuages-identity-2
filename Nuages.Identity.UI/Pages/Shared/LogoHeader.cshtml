@inject IConfiguration Configuration;
@{
  

  ViewBag.LogoUrl = Configuration["Nuages:LogosUrl"];
 
  ViewBag.ShowRegistration = Convert.ToBoolean(Configuration["Nuages:ShowRegistration"]);
  ViewBag.RegistrationUrl = Configuration["Nuages:RegistrationUrl"];

}

<div class="sm:mx-auto sm:w-full sm:max-w-md">
    @if (ViewBag.LogoUrl != null)
    {
      <img class="mx-auto h-32" src="@ViewBag.LogoUrl" alt="Workflow">
    }
    
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      @Localizer["login:title"]
    </h2>
  </div>
<div class="sm:mx-auto sm:w-full sm:max-w-md">
  @if (ViewBag.ShowRegistration)
  {
    <p class="mt-2 text-center text-sm text-gray-600">
      @Localizer["or"]
      <a href="@ViewBag.RegistrationUrl" class="font-medium text-indigo-600 hover:text-indigo-500">
        @Localizer["register.title"]
      </a>
    </p>
  }
</div>


