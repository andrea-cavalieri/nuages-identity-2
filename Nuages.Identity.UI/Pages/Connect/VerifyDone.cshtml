@page
@model Nuages.Identity.UI.Pages.Connect.VerifyAccepted

@{
    ViewData["Title"] = Localizer["device:title"];
}

@if (Model.Success)
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <span class="green-succes mt-4">@Localizer["device:success"]</span>
        </div>
    </div>
}
else
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <span class="mt-4">@Localizer["device:error"]</span>
        </div>
    </div>
}

@section MainFooter
{
    <partial name="Shared/BackToHome"/>
}
