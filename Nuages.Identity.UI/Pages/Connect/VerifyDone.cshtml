@page
@model Nuages.Identity.UI.Pages.Connect.VerifyAccepted

@{
    ViewData["Title"] = Localizer["device:title"];
}

@if (Model.Success)
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <i class="fa fa-check-circle text-green-700 fa-3x text-center"></i>
            <span class="mt-4">@Localizer["device:success"]</span>
        </div>
    </div>
}
else
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <i class="fa fa-circle-xmark text-red-700 fa-3x text-center"></i>
            <span class="mt-4">@Localizer["device:error"]</span>
        </div>
    </div>
}

@section MainFooter
{
    <partial name="Shared/BackToHome"/>
}
