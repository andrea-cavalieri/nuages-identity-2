<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
        <add assembly="NLog.AWS.Logger" />
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <target name="aws_nuages" type="AWSTarget" logGroup="/.nuages/Identity/UI" region="ca-central-1"/>
        <target name="aws" type="AWSTarget" logGroup="/.nuages/Identity/all" region="ca-central-1"/>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <!--All logs, including from Microsoft-->
        <logger name="Nuages.*" minlevel="Information" writeTo="aws_nuages" />
        <logger name="*" minlevel="Information" writeTo="aws" />
    </rules>
</nlog>