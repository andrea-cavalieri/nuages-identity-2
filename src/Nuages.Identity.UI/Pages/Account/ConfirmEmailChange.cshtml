@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = Localizer["changeEmail:title"];
}


@if (Model.Success)
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <i class="fa fa-check-circle green-success fa-3x text-center"></i>
            <span class="mt-4">@Localizer["changeEmail:success"]</span>
        </div>
    </div>
}
else
{
    <div class="flex justify-center mt-6">

        <div class="flex flex-col">
            <i class="fa fa-circle-xmark text-red-700 dark:text-red-500 fa-3x text-center"></i>
            <span class="mt-4">@Localizer["changeEmail:error"]</span>
        </div>
    </div>
}
